@model ToDoCard

<div class="mt-4">
    <h1 class="text-primary">Create</h1>
</div>

<form method="post">
    <div class="form-group col-6">
        <label class="col-form-label col-form-label-sm mt-4" asp-for="Name"></label>
        <input class="form-control form-control-sm" type="text" asp-for="Name">
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
     <div class="form-group col-6">
        <label for="exampleTextarea" asp-for="Discription" class="form-label mt-4"></label>
        <textarea class="form-control" rows="5" asp-for="Discription"></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-4">Submit</button>
    <a class="btn btn-secondary mt-4" asp-controller="ToDo" asp-action="GetCards">Back</a>
</form>